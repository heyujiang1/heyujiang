<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.he.dao.Student1Mapper">
    <select id="getStudentInformation" resultType="com.he.pojo.Student1">
        select * from mybatis.student1;
    </select>
    <select id="getStudent1InformationByName" parameterType="String" resultType="com.he.pojo.Student1">
        select * from mybatis.student1
        <where>
            <if test="name!=null and name!=''">
                name=#{name}
            </if>
        </where>
    </select>
    <select id="getStudent1InformationByProfession" resultType="com.he.pojo.Student1" parameterType="com.he.pojo.Student1">
        select * from mybatis.student1
        <where>
            <choose>
                <when test="name!=null and name!=''">
                    name=#{name};
                </when>
                <when test="profession!=null and profession!=''">
                    profession=#{profession};
                </when>
            </choose>
        </where>
    </select>
    <select id="queryStudentInformationByNumber" parameterType="com.he.pojo.Student1" resultType="com.he.pojo.Student1">
        select * from mybatis.student1
        <trim prefix="where" prefixOverrides="and">
            <choose>
                <when test="name!=null and name!=''">
                    name=#{name};
                </when>
                <when test="profession!=null and profession!=''">
                    profession=#{profession};
                </when>
                <otherwise>
                    and number is not null;
                </otherwise>
            </choose>
        </trim>
    </select>
    <select id="queryStudent1InformationByid" parameterType="com.he.pojo.Student1" resultType="com.he.pojo.Student1">
        select * from mybatis.student1 where id in
        <foreach collection="array" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>